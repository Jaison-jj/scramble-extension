{
  "manifest_version": 3,
  "name": "Scramble Chrome Extension",
  "version": "1.0",
  "description": "A new way of web authentication.",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/default16.png",
      "48": "assets/icons/default48.png",
      "128": "assets/icons/default128.png"
    }
  },
  "icons": {
    "16": "assets/icons/default16.png",
    "48": "assets/icons/default48.png",
    "128": "assets/icons/default128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://demoguest.com/qa/vdi"],
      "run_at": "document_end",
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab",
    "webNavigation",
    "cookies",
    "bookmarks",
    "contextMenus"
  ],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": [
        "qrcode.min.js",
        "images/scrambleOnline16.png",
        "images/scrambleOffline16.png",
        "fonts/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'"
  }
}
